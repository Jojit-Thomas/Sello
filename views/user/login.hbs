<link rel="stylesheet" href="/stylesheets/login.css" />

<div
  class="w-100 container-fluid d-flex justify-content-center"
  style="background-color: #0c0c0c3d; height: 100vh;"
>
  <div class="loginBox col-9 col-sm-6 col-md-5 col-lg-4 col-xl-3 m-auto p-4 d-flex flex-column">
    <img
      src="https://i.ibb.co/yVGxFPR/2.png"
      alt="avatar"
      width="100px"
      height="100px"
      class="mx-auto img-fluid"
    />
    <h3 class="mx-auto p-2 pink">Sign in</h3>
    <form action="/login" autocomplete="false" id="login" method="post">
      <input
        type="text"
        name="username"
        placeholder="Username"
        class="w-100 h-25 mt-2 p-3 text-white"
      />
      <input
        type="password"
        name="password"
        placeholder="Password"
        class="w-100 h-25 mt-2 p-3 text-white"
      />
      <button
        type="submit"
        class="pink-bg w-100 rounded-pill text-white mt-2"
      >Login</button>
    </form>
    <span class="mx-auto mt-1" style="font-weight: 500; font-size: medium;">Forget
      Password</span>
    <span class="mx-auto pb-2"><a class="pink" href="/signup">Sign-Up </a></span>
    {{#if error}}
      <small
      style="color: #ff0000; "
      class="align-self-center mt-1"
      id="error"
    >{{error}}</small>
    {{/if}}
  </div>
</div>
