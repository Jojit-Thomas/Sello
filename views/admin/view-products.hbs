
<section>
  <div class="container-fluid">
    <div class="container-fluid">
      <div class="row my-4">
        <div class=" float-end">
          <a href="/admin/add-product"><div
            class="float-end btn bg-violet"
          >Add Product</div></a>
        </div>
      </div>
    </div>
    <div class="container-fluid" style="overflow-x:auto;">
      <table class="table" id="user-table">
        <thead>
          <tr>
            <th class="text-white" scope="col">#</th>
            <th class="text-white" scope="col">Title</th>
            <th class="text-white" scope="col">Description</th>
            <th class="text-white" scope="col">Price</th>
            <th class="text-white" scope="col">Image</th>
            <th class="text-white" scope="col">Options</th>
          </tr>
        </thead>
        <tbody>
          {{#each items}}
            <tr>
              <th class="text-white" scope="row">{{@index}}</th>
              <td class="text-white">{{this.name}}</td>
              <td class="text-white">{{this.description}}</td>
              <td class="text-white">{{this.price}}</td>
              <td class="text-white"><img
                  src="/product-images/{{this._id}}.aivf"
                  width="50px"
                  alt=""
                /></td>
              {{! <td class="text-white"><a href="/admin/delete-user"><img src="/images/trash.svg" alt="delete" width="25px" height="25px" ></a></td> }}
              <td class="text-white" style="white-space: nowrap;">
                <a
                  class="btn btn-primary"
                  href="/admin/edit-product/{{this._id}}"
                >Edit
                </a>
                <a
                  class="btn btn-danger"
                  href="/admin/delete-product/{{this._id}}"
                  onclick="return confirm('Are you sure you want to delete {{this.name}} product?');"
                >Delete
                </a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>
<link rel="stylesheet" href="/stylesheets/datatable.css">
<script>
  $(document).ready( function () { console.log("loading...");
  $('#user-table').DataTable(); });
</script>